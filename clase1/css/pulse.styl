azul = #22BCE0
background = #E8E8E8
gris_oscuro = #444

body
	background background
	color gris_oscuro
	font-family Arial
	font-size 16px
h1
	font-size 2em
a
	color gris_oscuro
a:visited
	color gris_oscuro
header
	background gris_oscuro
	color white
	padding 0.5em

	.logo
		border-right 1px solid azul
		width 60px
		float left

		img
			width 52px
	
	.titular
		margin 0 80px 0 70px
		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding	0
nav
	background azul
	border-left 15px solid white
	position relative

	&:before
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		content ""
		left 0
		position absolute
		top 0
		
	.menu
		height 40px
		margin 0
		line-height 40px
		margin 0 overflow-x auto
		
		white-space nowrap
		li
			display inline-block
			a
				color #fff
				display inline-block
				margin 0 0.5em
				padding 0.2em
				text-decoration none
				&a:after
					content " - "

.left
	float left

.right
	float right

.user_avatar
	width: 135px;
	height: 135px;

